{
	"NAME": "Step OSS - New build",
	"OS": "LINUX",

	"ACTIONS": [
		{
			"ACTION": "COMPILE",
			"TYPE": "POM",
			"BEFORE": "step-java-before-compile_3.18",
			"FOLDER": "step-parent/",
			"PARAMETERS": [
				{
					"NAME": "DEVELOPMENT",
					"URL": "nexus-staging::https://nexus-enterprise.exense.ch/repository/staging-maven/",
					"CONFIG": "DefaultBuild"
				},
				{
					"NAME": "INTEGRATION",
					"URL": "nexus-staging::https://nexus-enterprise.exense.ch/repository/staging-maven/",
					"CONFIG": "DefaultBuild"
				},
				{
					"NAME": "PRODUCTION",
					"URL": "sonatype::https://oss.sonatype.org/service/local/staging/deploy/maven2",
					"CONFIG": "DefaultBuild"
				}
			]
		},
		{
			"ACTION": "PUSH",
			"ACTIONS": [
				{
					"TYPE": "MAVEN",
					"PARAMETERS": [
						{
							"URL": "nexus-staging::https://nexus-enterprise.exense.ch/repository/staging-maven/"
						}
					],
					"ORIGIN": "step-parent/pom.xml",
					"DESTINATION": "ch.exense.step:step-parent-${BRANCH}:${VERSION}",
					"PACKAGING": "pom"
				},
				{
					"TYPE": "GITHUB",
					"ACTIONS": [
						{
							"ORIGIN": "step-distribution/target/step-controller-${VERSION}.zip",
							"DESTINATION": "step-controller-${VERSION}.zip"
						},
						{
							"ORIGIN": "step-distribution/target/step-agent-${VERSION}.zip",
							"DESTINATION": "step-agent-${VERSION}.zip"
						},
						{
							"ORIGIN": "step-distribution/target/step-ide-${VERSION}.zip",
							"DESTINATION": "step-ide-${VERSION}.zip"
						}
					]
				},
				{
					"TYPE": "FTP",
					"ACTIONS": [
						{
							"ORIGIN": "step-distribution/target/step-controller-${VERSION}.zip",
							"DESTINATION": "step/${VERSION}/step-controller-${VERSION}.zip"
						},
						{
							"ORIGIN": "step-distribution/target/step-agent-${VERSION}.zip",
							"DESTINATION": "step/${VERSION}/step-agent-${VERSION}.zip"
						},
						{
							"ORIGIN": "step-distribution/target/step-ide-${VERSION}.zip",
							"DESTINATION": "step/${VERSION}/step-ide-${VERSION}.zip"
						}
					]
				},
				{
					"TYPE": "DOCKER",
					"OS": "LINUX",
					"PARAMETERS": [
						{
							"NAME": "DEVELOPMENT",
							"URL": "docker-dev.exense.ch"
						},
						{
							"NAME": "INTEGRATION",
							"URL": "docker-dev.exense.ch"
						},
						{
							"NAME": "PRODUCTION",
							"URL": "docker.exense.ch"
						}
					],
					"ACTIONS": [
						{
							"ORIGIN": "step-distribution/target/step-controller-${VERSION}.zip",
							"DESTINATION": "step/controller:${VERSION}-java-11",
							"CONFIG": "controller-11-dockerfile"
						},
						{
							"ORIGIN": "step-distribution/target/step-agent-${VERSION}.zip",
							"DESTINATION": "step/agent:${VERSION}-java-11",
							"CONFIG": "agent-11-dockerfile"
						}
					]
				}
			]
		},
		{
			"ACTION": "DEPLOY",
			"TYPE": "CLUSTER",
			"PARAMETERS": [
				{
					"NAME": "DEVELOPMENT",
					"INSTANCE":	"${BRANCH}" ,
					"APPLICATION": "stepos",
					"EDITION": "os",
					"DOMAIN": "exense.ch",
					"IMAGE_REPOSITORY": "docker-dev.exense.ch/step",
					"PERSISTENCE": "false"
				},
				{
					"NAME": "INTEGRATION",
					"INSTANCE":	"nhy" ,
					"APPLICATION": "stepos",
					"EDITION": "os",
					"DOMAIN": "exense.ch",
					"IMAGE_REPOSITORY": "docker-dev.exense.ch/step",
					"PERSISTENCE": "false"
				}
			]
		}
	]
}